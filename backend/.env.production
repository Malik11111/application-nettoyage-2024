# Production environment variables for DigitalOcean
NODE_ENV=production
PORT=8080

# Database (sera configuré automatiquement par DigitalOcean)
# DATABASE_URL sera injecté automatiquement

# JWT Secret (à configurer dans DigitalOcean)
# JWT_SECRET sera injecté automatiquement

# CORS configuration
FRONTEND_URL=https://votre-domaine.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12